<form method="post" enctype="multipart/form-data">
	<input type="hidden" value="{{ article.id }}" name="id">

	<label for="title">Title</label>
	<input type="text" value="{{ article.title }}" name="title" id="title">

	<label for="content">Content</label>
	<input type="text" value="{{ article.content }}" name="content" id="content">

	<select name="categoryId" id="categories">

		{% for category in categories %}
        <option value={{ category.id }} {% if category.name == article.category_name %}selected{% endif %}>{{ category.name }}</option>
    {% endfor %}

	</select>

	<label for="imageUpload">Upload an profile image</label>    
	<input type="file" name="avatar" id="imageUpload" />

	{%  if errors %}
		{% for error in errors %}
			<p>{{ error }}</p>
		{% endfor %}
	{% endif %}

	<button>Submit</button>
</form>
